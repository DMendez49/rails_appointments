<h1>Add Appointment</h1>
  <%= form_with(model: [@hospital, @appointment], local: true, class: "ui form" ) do |f| %>
    <%= f.label :role %>
    <%= f.select :role, ['nurse', 'docter', 'patient'] %>
    <br />
    <%= f.label :patient %>
    <%= f.select :patient_id, @patients.collect { |u| [u.full_name, u.id] } %>
    <br />
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>